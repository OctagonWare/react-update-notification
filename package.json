{
  "name": "react-update-notification",
  "version": "1.0.0",
  "description": "New version notification for your React application.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build:cjs": "tsc",
