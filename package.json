  "files": [
    "lib",
    "bin",
    "es"
  ],
  "peerDependencies": {
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.48",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-plugin-react-hooks": "^4.1.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "yargs": "^15.4.1"
